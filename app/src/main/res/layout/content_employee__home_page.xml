<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context="com.example.android.ccd.Employee_HOmePage"
    tools:showIn="@layout/activity_employee__home_page">
<!--

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_back"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:background="#5f8aff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/profile_image"
                android:layout_margin="10dp">
            </ImageView>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:id="@+id/Update_dp"
            android:src="@android:drawable/ic_menu_camera"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/update_profile_employee_button"
            android:src="@android:drawable/ic_menu_edit" />

         />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/employee_name"
                android:textStyle="bold"
                android:text="Name"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919473480014"
            android:autoLink="phone"
            android:id="@+id/contact"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_menu_call"

            />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/job_sug_card"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:visibility="gone"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suggestions"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/job_sug"
                    />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_jobs"
        android:layout_margin="10dp"
        android:padding="10dp"
        card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jobs"
            android:layout_margin="5dp"/>
        <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:padding="10dp"
        android:layout_height="wrap_content"
         android:id="@+id/list_jobs"
            />
    </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
        </ScrollView>
        </LinearLayout>

