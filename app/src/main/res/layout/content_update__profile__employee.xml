<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.ccd.Update_Profile_Employee"
    tools:showIn="@layout/activity_update__profile__employee">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_marginTop="32dp"
        android:paddingBottom="12dp"
        android:elevation="200dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/name_icon"
        android:layout_below="@+id/name_text"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:hint=" Username"/>
    <EditText
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:elevation="200dp"
        android:drawableLeft="@drawable/phone_icon"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content"
        android:hint=" PhoneNumber"
        android:textSize="16sp"
        android:id="@+id/phone"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job"
        android:textColor="@color/text"
        android:hint=" Profession"
        android:elevation="200dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/profession"
        android:drawableTint="@color/colorPrimaryDark"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />
    <TextView
        android:id="@+id/type_text"
        android:text="You are registered as" android:layout_width="match_parent"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:elevation="200dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:background="#1A237E"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/type" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:textColor="@color/white"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="4dp"
        android:imeOptions="actionUnspecified"
        />




    <TextView
        android:id="@+id/job_image_select_text"
        android:layout_marginTop="8dp"
        android:text="Your Profession: Select By Images "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingLeft="8dp"
        android:layout_below="@+id/job_text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_job_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skills"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/oval"
        android:text="Load Jobs"
        android:layout_gravity="center"/>




    <Button
        android:id="@+id/Save_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/oval"
        android:layout_below="@+id/photo"
        android:text="Save"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>