<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.ccd.Update_Profile_Employer"
    tools:showIn="@layout/activity_update__profile__employer">




        <TextView
            android:id="@+id/name_text"
            android:text="Name"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:layout_below="@+id/name_text"
            android:textSize="16sp"
            android:inputType="textMultiLine" />


    <TextView
        android:id="@+id/job_text"
        android:text="Your Profession"
        android:textStyle="bold"
        android:layout_below="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />
    <TextView
        android:id="@+id/skills"
        android:text="Any Relevant Photo of Your Skill"
        android:textStyle="bold"
        android:layout_below="@+id/job_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skills"
        android:text="Load Picture"
        android:layout_gravity="center"/>






    <Button
        android:id="@+id/Save_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/photo"
        android:text="Save"
        android:layout_gravity="center"/>

</LinearLayout>
