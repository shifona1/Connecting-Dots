<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/nat"
    android:orientation="vertical"
    tools:context="com.example.android.ccd.Update_Profile_Employer"
    tools:showIn="@layout/activity_update__profile__employer">




    <TextView
        android:id="@+id/name_text"
        android:text="  Name"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/name_icon"
        android:textColor="@color/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/text"
        android:layout_below="@+id/name_text"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:hint="Please Enter your Username"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text=" Phone_Number"
        android:textStyle="bold"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/text"
        android:id="@+id/Phone_text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:paddingLeft="8dp"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:inputType="phone" />

    <TextView
        android:id="@+id/job_text"
        android:text="  Your Profession"
        android:drawableLeft="@drawable/profession"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:textColor="@color/text"
        android:layout_below="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job"
        android:hint="        Type Here"
        android:paddingLeft="8dp"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/type_text"
        android:text="You are registered as" android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:paddingLeft="8dp"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/type" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:textColor="@color/text"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:imeOptions="actionUnspecified"
        />
    <Button
        android:id="@+id/Save_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text"
        android:background="@drawable/oval"
        android:layout_below="@+id/photo"
        android:text="Save"
        android:layout_gravity="center"/>

</LinearLayout>
