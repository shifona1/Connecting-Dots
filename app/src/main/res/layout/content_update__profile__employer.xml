<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_"
    android:orientation="vertical"
    tools:context="com.example.android.ccd.Update_Profile_Employer"
    tools:showIn="@layout/activity_update__profile__employer">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_marginTop="48dp"
        android:paddingBottom="12dp"
        android:elevation="200dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/name_icon"
        android:textSize="16sp"
        android:layout_below="@+id/name_text"
        android:inputType="textPersonName"
        android:hint="  Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:elevation="200dp"
        android:drawableLeft="@drawable/phone_icon"
        android:paddingBottom="12dp"
        android:hint="  PhoneNumber"
        android:textSize="16sp"
        android:id="@+id/phone"
        android:textColor="@color/text"
        android:inputType="phone" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:elevation="200dp"
        android:drawableLeft="@drawable/profession"
        android:paddingBottom="12dp"
        android:hint=" Profession"
        android:textSize="16sp"
        android:id="@+id/job"
        android:textColor="@color/text"
        android:inputType="textShortMessage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:elevation="200dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="24dp"
        android:background="#1A237E"
        >
    <TextView
        android:id="@+id/type_text"
        android:text="You are registered as" android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:imeActionId="@+id/login"
        android:text="Employer"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    </LinearLayout>
    <Button
        android:id="@+id/Save_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textColor="@color/text"
        android:background="@drawable/oval"
        android:textSize="20sp"
        android:layout_below="@+id/photo"
        android:text="Save"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>