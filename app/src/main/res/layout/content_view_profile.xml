<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.ccd.ViewProfile"
    tools:showIn="@layout/activity_view_profile">




    <ImageView
        android:id="@+id/vp_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/email_text"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:paddingTop="8dp"
        android:text="Email ID" android:layout_width="wrap_content"
        android:layout_below="@+id/name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/name_text"
        android:text="Name"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/name_text"
        android:textSize="16sp"
        android:inputType="textMultiLine" />


    <TextView
        android:id="@+id/job_text"
        android:text="Your Profession"
        android:textStyle="bold"
        android:layout_below="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:editable="false"
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />



</LinearLayout>
