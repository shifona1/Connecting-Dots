<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">
    <ScrollView android:id="@+id/registeration_form" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/name_text"
        android:text="Name" android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:layout_below="@+id/name_text"
        android:textSize="16sp"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/pass_text"
        android:text="Password" android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/password" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true" />

    <TextView
        android:id="@+id/email_text"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:text="Email ID" android:layout_width="wrap_content"
        android:layout_below="@+id/name"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />

<!--    <TextView
        android:id="@+id/photo"
        android:text="Upload Your Photo"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:layout_below="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
--><!--<TextView
        android:id="@+id/job"
        android:text="Your Profession"
        android:textStyle="bold"
        android:layout_below="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <EditText
        android:id="@+id/job_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />
    <TextView
        android:id="@+id/skills"
        android:text="Any Relevant Photo of Your Skill"
        android:textStyle="bold"
        android:layout_below="@+id/job_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skills"
        android:text="Load Picture"
        android:layout_gravity="center"/>-->

    <TextView
        android:id="@+id/register_type"
        android:text="How would you like to Register"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Employee"/>
        <RadioButton android:id="@+id/radio_employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer"/>
    </RadioGroup>


    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/photo"
        android:text="Next"
        android:layout_gravity="center"/>


</LinearLayout>
    </ScrollView>
</LinearLayout>