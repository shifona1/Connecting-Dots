    <EditText
        android:id="@+id/job_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job"
        android:hint="Type Here"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:inputType="textMultiLine" />
    <TextView
        android:id="@+id/skills"
        android:text="Any Relevant Photo of Your Skill"
        android:textStyle="bold"
        android:layout_below="@+id/job_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skills"
        android:text="Load Picture"
        android:layout_gravity="center"/>-->

    <TextView
        android:id="@+id/register_type"
        android:text="How would you like to Register"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:textColor="@color/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:checked="true"
            android:text="Employee"/>
        <RadioButton android:id="@+id/radio_employer"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_height="wrap_content"
            android:text="Employer"/>
    </RadioGroup>



            <Button
                android:id="@+id/buttonLoadPicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/photo"
                android:background="@drawable/camera"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/photo"
                android:text="Pick Your Profile Picture" android:layout_width="wrap_content"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />


            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/photo"
                android:background="@drawable/oval_background"
                android:text="Register"
                android:textColor="@color/text"
                android:layout_gravity="center"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>