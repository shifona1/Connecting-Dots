<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/nat"
    tools:context=".MainActivity$PlaceholderFragment">
    <ScrollView android:id="@+id/registeration_form" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_text"
                android:text="Name" android:layout_width="wrap_content"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please Enter Your Username"
                android:textColorHint="@color/text"
                android:drawableLeft="@drawable/name_icon"
                android:paddingLeft="8dp"
                android:layout_below="@+id/name_text"
                android:textSize="16sp"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/phone_text"
                android:text="Phone" android:layout_width="wrap_content"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please Enter Your Username"
                android:textColorHint="@color/text"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:paddingLeft="8dp"
                android:layout_below="@+id/name_text"
                android:textSize="16sp"
                android:inputType="phone" />

